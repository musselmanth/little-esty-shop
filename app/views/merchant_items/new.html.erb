<h2>Create a New Item<h2>

<div>
   <%= form_with url: merchant_items_path(@merchant.id), method: :post, local: true do |f| %>
   <p><%= f.label :name, "Enter Item Name" %>
      <%= f.text_field :name, placeholder: "Item Name"%></p>

   <p><%= f.label :description, "Enter Item Description" %>
      <%= f.text_field :description, placeholder: "Item Description" %></p>

   <p><%= f.label :unit_price, "Enter Item Price $" %>
      <%= f.text_field :unit_price, placeholder: "Item Price (ex. 12.99)" %></p>

      <%= f.hidden_field :status, value: false %>
      <%= f.submit "Submit" %>
   <% end %>
</div>