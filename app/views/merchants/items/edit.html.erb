<%= render partial: '/merchants/merchants-nav', locals: {merchant: @merchant} %>
<h2 class="subtitle">Update information for <%= @item.name %></h2>

<%= form_with model: [:merchant, @item], local: true do |f| %>
   <%= f.label :name, "Update Name:" %>
   <%= f.text_field :name %><br>
   <%= f.label :description, "Update Description:" %><br>
   <%= f.text_area :description, size: "30x5" %><br>
   <%= f.label :unit_price, "Update Unit Price:" %>
   $<%= f.text_field :unit_price, size: 5 %><br>
   <%= f.submit %>
<% end %>