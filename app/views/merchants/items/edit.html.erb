<h2>Update information for <%= @item.name %><h2>

<h3><%= form_with model: [:merchant, @item], local: true do |f| %>
  <p><%= f.label :name, "Update Name:" %>
     <%= f.text_field :name%></p>

  <p><%= f.label :description, "Update Description:" %>
     <%= f.text_field :description %></p>

  <p><%= f.label :unit_price, "Update Unit Price:" %>
     <%= f.text_field :unit_price %></p>

     <%= f.submit %>

    <% end %></h3>