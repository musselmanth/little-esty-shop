<%= render partial: '/merchants/merchants-nav', locals: {merchant: @merchant} %>
<h2 class="subtitle">Create New Item</h2>
<div class="inv_info">
   <%= form_with model: [:merchant, @item], local: true do |f| %>
      <%= f.label :name, "Item Name:" %>
      <%= f.text_field :name %><br>
      <%= f.label :description, "Item Description:" %><br>
      <%= f.text_area :description, size: "30x5" %><br>
      <%= f.label :unit_price, "Unit Price:" %>
      $<%= f.text_field :unit_price, size: 5 %><br>
      <%= f.hidden_field :status, value: false  %>
      <%= f.submit %>
   <% end %>
</div>